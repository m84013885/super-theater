
.main{
    display: flex;
    align-items: center;
    width: 100%;
    height: 150rpx;
}
.image-box{
    display: flex;
    align-items: center;
    width: 150rpx;
    height: 100%;
}
.image{
    margin: 0 30rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
}
.content{
    display: flex;
    flex-direction: column;
}
.big{
    color: #353535;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
}
.small{
    color: #675E72;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
}
.border-bottom{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right:30rpx;
    width: 100%;
    height: 100%;
    border-bottom:2rpx solid rgb(238, 238, 238);
}
.time{
    color: #675E72;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
}