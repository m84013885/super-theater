page{
    height: 100%;
}
.page{
    display: flex;
    flex-direction: column;
    height: 100%;
}
.content{
    flex: 1;
    padding: 0 10rpx;
    background-color: rgb(237, 237, 237);
}
.tool{
    display: flex;
    align-items: center;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    background-color: rgb(246, 246, 246);
}
.mission{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
}
.info{
    width: 50rpx;
    height: 50rpx;
    border: 2rpx solid #353535;
    border-radius: 50%;
    color: #353535;
    text-align: center;
    font-weight: bold;
    font-size: 36rpx;
    font-family: PingFangSC-Regular;
}
.room{
    width: 100rpx;
}
.inputContent{
    display: flex;
    align-items: center;
    justify-content: center;
    width:450rpx;
}
.texteara{
    box-sizing: border-box;
    padding: 10rpx;
    width: 450rpx;
    height: 60rpx;
    border-radius: 5rpx;
    background-color: #ffffff;
    color: #353535;
    font-size: 38rpx;
    font-family: PingFangSC-Regular;
}
/******************************/
#chatWidth{
    position: absolute;
    top: -100%;
    left: 0;
    color: #353535;
    word-wrap:break-word;
    word-break:break-all;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    opacity: 0;
}