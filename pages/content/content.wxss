.hide{
    position: absolute;
    top: -100%;
    left: 0;
    opacity: 0;
}
page{
    height: 100%;
}
.page{
    position: relative;
    bottom: 0;
    display: flex;
    flex-direction: column;
    height: 100%;
}
.content{
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    flex: 1;
    padding: 0 10rpx 30rpx 10rpx;
    background-color: rgb(237, 237, 237);
}
.texteara{
    box-sizing: border-box;
    padding: 10rpx;
    max-height: 240rpx;
    width: 450rpx;
    height: 60rpx;
    border-radius: 5rpx;
    background-color: #ffffff;
    color: #353535;
    font-size: 38rpx;
    font-family: PingFangSC-Regular;
}
/******************************/
#chatWidth{
    position: absolute;
    top: -100%;
    left: 0;
    color: #353535;
    word-wrap:break-word;
    word-break:break-all;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    opacity: 0;
}
/******************************/
.toolBox{
    width: 100%;
    height:320rpx;
    border-top: 1rpx solid rgba(53,53,53,.2);
    background-color: rgb(246, 246, 246);
    transition:height .3s linear; 
}
.showToolBox{
    height: 320rpx;
}
.hideToolBox{
    display: none;
    height: 0;
}